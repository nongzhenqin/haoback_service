		<!--<url-pattern>/webservice/*</url-pattern>-->
	<!--</servlet-mapping>-->

	<welcome-file-list>
		<welcome-file>/</welcome-file>
	</welcome-file-list>
	<!-- 配置session超时时间，单位分钟 -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>